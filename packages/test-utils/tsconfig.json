{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["DOM", "ESNext"],
    "allowJs": false,
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "jsx": "preserve",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "noEmit": true,
  },
  "exclude": ["dist"]
}
