{
  "name": "@webx-kit/test-utils",
  "version": "0.1.2",
  "bin": {
    "webx-launch": "bin/webx-launch.mjs"
  },
  "exports": {
    "./playwright": {
      "types": "./src/playwright.ts",
      "default": "./src/playwright.ts"
    },
    "./shared": {
      "types": "./src/shared.ts",
      "default": "./src/shared.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./src/*.ts"
      ]
    }
  },
  "publishConfig": {
    "exports": {
      "./playwright": {
        "types": "./dist/playwright.d.ts",
        "default": "./dist/playwright.js"
      },
      "./shared": {
        "types": "./dist/shared.d.ts",
        "default": "./dist/shared.js"
      }
    },
    "typesVersions": {
      "*": {
        "*": [
          "./dist/*.d.ts"
        ]
      }
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "web",
    "extension",
    "webext",
    "test",
    "e2e"
  ],
  "repository": {
    "url": "https://github.com/tmkx/webx-kit.git",
    "directory": "packages/test-utils"
  },
  "scripts": {
    "prepack": "tsc -p ./tsconfig.build.json",
    "lint:type": "tsc --noEmit"
  },
  "dependencies": {
    "@modern-js/utils": "^2.65.1",
    "@webx-kit/chrome-types": "workspace:^",
    "chrome-launcher": "^1.1.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@types/node": "^22.13.5",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "@playwright/test": "^1.30.0"
  }
}
